      WEB_SOCKET_DEBUG = true;
      Pusher.key = '#{Pusher.key}'
      Pusher.channel = '#{PUSHER_CHANNEL}'
  %body
    #actionsContainer
      - %w(postit purple green orange yellow).each do |colour| 
        %a{:href => "#", :class => "addNote #{colour}"}          
    #notesContainer